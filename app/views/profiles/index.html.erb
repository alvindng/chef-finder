<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table class='table-responsive'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Street Address</th>
      <th>City </th>
      <th>State</th>
      <th>Zip Code</th>
      <th>Phone</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= link_to profile.name, profile_path(profile)%></td>
        <td><%=profile.description%></td>
        <td><%=profile.address1%></td>
        <td><%=profile.city%></td>
        <td><%=profile.state%></td>
        <td><%=profile.zipcode%></td>
        <td><%=profile.phone%></td>
        <% if current_user && current_user.id === profile.user.id %>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
          <td><%= link_to 'Remove', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Profile', new_profile_path %>

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  buildMap(<%=raw @hash.to_json %>);
</script>
