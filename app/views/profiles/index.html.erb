<p id="notice"><%= notice %></p>
<div class="wrapper style2 container special">
  <h1>Profiles</h1>
  <table class='table-responsive'>
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>City </th>
        <th>State</th>
        <th>Zip Code</th>
      </tr>
    </thead>

    <tbody>
      <% @profiles.each do |profile| %>
        <tr>
          <td><%= link_to profile.name, user_profile_path(profile.user, profile)%></td>
          <td><%=profile.description%></td>
          <td><%=profile.city%></td>
          <td><%=profile.state%></td>
          <td><%=profile.zipcode%></td>

            <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
            <td><%= link_to 'Remove', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<div class="gmap-container">
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<script type="text/javascript">
  buildMap(<%=raw @hash.to_json %>);
</script>
